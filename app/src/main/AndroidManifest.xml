<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.indus.nytimes">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:exported="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.example.indus.nytimes.ui.AboutActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            tools:targetApi="cupcake" />
        <activity
            android:name="com.example.indus.nytimes.ui.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.indus.nytimes.ui.MainActivity" />
    </application>

</manifest>